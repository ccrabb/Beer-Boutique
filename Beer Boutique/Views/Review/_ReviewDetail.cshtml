@using BeerBoutique.Yeast
@model Models.ViewModels.ReviewViewModel
@{
    Layout = null;
    var accounts = OAuthWebSecurity.GetAccountsFromUserName(Model.UserName);
}

<fieldset>
    <div class="row-fluid">
        <div class="span1">
            @if (accounts.Count > 0)
            {
                var account = accounts.First();
                <img src="@Helpers.GetProfilePictureUri(account.Provider, account.ProviderUserId)" alt="@User.Identity.Name" style="max-height: 30px;float:left;" class="img-polaroid"/>
            }
            <h4>@Model.UserName</h4>
        </div>
        <div class="span2">
            
        </div>
    </div>
    <div class="row-fluid">
         <div class="rateit" data-rateit-ispreset='true' data-rateit-readonly='true' data-rateit-value='@Model.WeightedScore'></div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <dl class="dl-horizontal">
                <dt>Appearance (@Model.Review.AppearanceScore)
                </dt>
                <dd>@Model.Review.AppearanceDescription</dd>
                <dt>Aroma (@Model.Review.AromaScore)</dt>
                <dd>@Model.Review.AromaDescription</dd>
                <dt>Taste (@Model.Review.TasteScore)</dt>
                <dd>@Model.Review.TasteDescription</dd>
            </dl>
        </div>
    </div>
</fieldset>
